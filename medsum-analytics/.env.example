# Application settings
APP_PORT=8080

# Valkey settings
VALKEY_HOST=localhost
VALKEY_PORT=6379
VALKEY_USE_SENTINEL=false
# VALKEY_SENTINEL_ADDRESS=127.0.0.1:26379,127.0.0.2:26379
# VALKEY_MASTER_NAME=valkeymaster

# AWS S3 settings
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_REGION=us-east-1
# S3_ENDPOINT_URL=http://localhost:9000  # For local MinIO/S3-compatible storage
S3_BUCKET=your-bucket-name
S3_RETRY_MAX_ATTEMPTS=3  # Maximum number of retry attempts for S3 downloads
S3_RETRY_DELAY_SECONDS=20  # Delay in seconds between retry attempts

# Pub/Sub channel settings
# The channel that medsum-api publishes to when transcription is complete
# This service subscribes to this channel
TRANSCRIBE_COMPLETE_CHANNEL=transcribe_complete

# PostgreSQL settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password
POSTGRES_DB=transcript_analysis
POSTGRES_SSLMODE=disable
